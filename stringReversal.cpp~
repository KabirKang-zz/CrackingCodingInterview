#include <iostream>
using namespace std;
void reverse(char* str)
{
  char * end = str;
  char tmp;
  if(str)
    {
      while(*end)
	{
	  ++end;
	}
      --end;

      while(str<end)
	{
	  tmp = *str;
	  *str++ = *end;
	  *end-- = tmp;
	}

    }
  cout << end << endl;
}

int main()
{
  char str[6] = {'k','a','b','i','r','\0'};
  cout << str << endl;
  reverse(str);
  return 0;
}
